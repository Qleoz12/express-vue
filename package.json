{
  "name": "express-vue",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc --project ./app/backend/tsconfig.json",
    "build:frontend": "vue-tsc --noEmit && vite build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "eslint --ext .js,.ts ./app/backend/ --fix",
    "lint:frontend": "eslint --ext .js,.jsx,.ts,.vue ./app/frontend/src/ --fix",
    "production": "npm run build && NODE_ENV='production' node app/backend/dist/index.js",
    "start:backend": "TS_NODE_PROJECT='./app/backend/tsconfig.json' ts-node-dev --files -r tsconfig-paths/register ./app/backend/src/index.ts",
    "start:frontend": "vite",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest --projects ./app/backend/jest.config.js",
    "test:backend:watch": "jest --watch --projects ./app/backend/jest.config.js",
    "test:e2e": "cypress run",
    "test:e2e:gui": "cypress open",
    "test:frontend": "jest --projects ./app/frontend/jest.config.js",
    "test:frontend:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --projects ./app/frontend/jest.config.js",
    "test:frontend:watch": "jest --watch --projects ./app/frontend/jest.config.js",
    "verify": "npm run verify:backend && npm run verify:frontend",
    "verify:backend": "tsc --project ./app/backend/tsconfig.json --noEmit",
    "verify:frontend": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@vee-validate/i18n": "^4.1.20",
    "@vee-validate/rules": "^4.1.20",
    "app-root-path": "^3.0.0",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "core-js": "^3.6.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "sass": "^1.32.13",
    "uuid": "^8.3.2",
    "vee-validate": "^4.2.2",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0-0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^24.0.19",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^15.0.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "cypress": "^7.3.0",
    "eslint": "^6.7.2",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "flush-promises": "^1.0.2",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.14",
    "lint-staged": "^9.5.0",
    "module-alias": "^2.2.2",
    "node-mocks-http": "^1.10.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5",
    "vite": "^2.3.0",
    "vue-jest": "^5.0.0-0",
    "vue-tsc": "^0.0.24"
  },
  "gitHooks": {
    "pre-commit": "lint-staged && npm run verify"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "npm run lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamceege/express-vue"
  }
}
