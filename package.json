{
  "name": "express-vue",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "vue-cli-service build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "vue-cli-service lint --ext .js,.ts ./app/backend/ --fix",
    "lint:frontend": "vue-cli-service lint --ext .js,.jsx,.ts,.vue ./app/frontend/src/ --fix",
    "nodemon": "nodemon --ext js,swig,json --ignore app/frontend/src/ --ignore app/dist/ app/backend/index.js",
    "production": "npm run build && NODE_ENV='production' node app/backend/index.js",
    "start:backend": "npm run nodemon",
    "start:frontend": "vue-cli-service serve",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "vue-cli-service test:unit --projects ./jest.backend.config.js",
    "test:backend:watch": "vue-cli-service test:unit --watch --projects ./jest.backend.config.js",
    "test:e2e": "vue-cli-service test:e2e --headless",
    "test:e2e:gui": "vue-cli-service test:e2e",
    "test:frontend": "vue-cli-service test:unit --projects ./jest.frontend.config.js",
    "test:frontend:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --projects ./jest.frontend.config.js",
    "test:frontend:watch": "vue-cli-service test:unit --watch --projects ./jest.frontend.config.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@vee-validate/i18n": "^4.1.20",
    "@vee-validate/rules": "^4.1.20",
    "app-root-path": "^3.0.0",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "vee-validate": "^4.2.2",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0-0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-e2e-cypress": "^4.5.11",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "flush-promises": "^1.0.2",
    "lint-staged": "^9.5.0",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.6",
    "prettier": "^1.19.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "typescript": "~3.9.3",
    "vue-jest": "^5.0.0-0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "npm run lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamceege/express-vue"
  }
}
